<% if(!status) { %>
  <h6 class='back'>< Back</h6>
<% } %>
<div class='deedInformation clearfix'>
  <div class='row clearfix'>
    <div class='deedPhoto'>
      <img src='<%= details.picture %>'/>
    </div> <!-- end deedPhoto -->

    <div class='headerDetails'>
      <h4><%= details.title %></h4>
      <p>Suggested By:  <%= capitalize(details.submitted_by) %></p>

      <div class='otherDetails'>
        <ul class='detailList'>
          <li class='clearfix'>
            <div class='leftCol'>
              <p>Category:</p>
            </div> <!-- end leftCol -->
            <div class='rightCol'>
              <p><%= capitalize(details.deed_type) %></p>
            </div>
          </li> <!-- end rightCol -->

          <li class='clearfix'>
            <div class='leftCol'>
              <p>Description:</p>
            </div> <!-- end leftCol -->
            <div class='rightCol'>
              <p><%= details.description %></p>
            </div> <!-- end rightCol -->
          </li>

          <% if(details.location) { %>
            <li class='clearfix'>
              <div class='leftCol'>
                <p>Location:</p>
              </div> <!-- end leftCol -->
              <div class='rightCol'>
                <p><%= details.location %></p>
              </div> <!-- end rightCol -->
            </li>
          <% } %>

          <% if(details.deadline) { %>
            <li class='clearfix'>
              <div class='leftCol'>
                <p>Deadline:</p>
              </div> <!-- end leftCol -->
              <div class='rightCol'>
                <p><%= details.deadline %></p>
              </div> <!-- end rightCol -->
            </li>
          <% } %>

          <% if(details.contact) { %>
            <li class='clearfix'>
              <div class='leftCol'>
                <p>Contact: </p>
              </div> <!-- end leftCol -->
              <div class='rightCol'>
                <p><%= details.contact %></p>
              </div> <!-- end rightCol -->
            </li>
          <% } %>

          <% if(details.url) { %>
            <li class='clearfix'>
              <div class='leftCol'>
                <p>Website: </p>
              </div> <!-- end leftCol -->
              <div class='rightCol'>
                <p><%= details.url %></p>
              </div> <!-- end rightCol -->
            </li>
          <% } %>
        </ul> <!-- end detailList -->
      </div>  <!-- end otherDetails -->
    </div> <!-- end headerDetails -->
  </div> <!-- end row -->

  <% if(gon.logged_in && status != 'current') { %>
    <div class='postButton'>
      <p class='button submitPost' data-id='<%= details.id %>'>
        <% if($('.currentDeed').data('id') != null) { %>
          Change To This Deed
        <% } else if(status === 'suggested' && $('.currentDeed').data('id') === null) { %>
          Start A New Thread
        <% } else { %>
          Choose This Deed
        <% } %>
      </p>
    </div> <!-- end postButton -->
  <% } %>
</div> <!-- end deedInformation -->
